<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Toolbar -->
    <style name="ToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@color/purple_fontys</item>
    </style>
    <style name="Title_Toolbar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ImageButton_Toolbar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@null</item>
    </style>
    <!-- Profile Fragment -->
    <style name="Student_Name">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/student_name_text_size</item>
        <item name="android:textColor">@color/purple_fontys</item>
    </style>
    <style name="Report_Issue_Text_Box">
        <item name="android:layout_height">@dimen/report_issue_height</item>
        <item name="android:layout_width">@dimen/report_issue_width</item>
    </style>
    <!-- Cart Fragment -->
    <!-- Order Overview Item -->
    <style name="Order_Overview_Calendar_Button">
        <item name="android:layout_height">@dimen/calender_size</item>
        <item name="android:layout_width">@dimen/calender_size</item>
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/calendar</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="Order_Overview_Remove_Button">
        <item name="android:layout_height">@dimen/remove_button_size</item>
        <item name="android:layout_width">@dimen/remove_button_size</item>
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/delete</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="Order_Overview_Info_Title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/item_info_text_size</item>
    </style>
    <style name="Order_Overview_Info" parent="Order_Overview_Info_Title">
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Bottom Navigation -->
    <style name="BottomNavigationTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/bottom_navigation_text_size</item>
    </style>
    <!-- Multiple Fragments -->
    <style name="Title_Fragment">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_fragment_text_size</item>
        <item name="android:textColor">@color/purple_fontys</item>
    </style>
    <style name="Empty_List_Text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/empty_list_text_size</item>
    </style>
</resources>